<?php
/** @var \Mirasvit\Profiler\Block\Tab\Profiler $block */

$stat = $block->getStat();
?>

<table cellpadding="0" cellspacing="0">
    <tr>
        <th><?= __('Timer Id') ?></th>
        <th><?= __('Time (ms)') ?></th>
        <th><?= __('Avg (ms)') ?></th>
